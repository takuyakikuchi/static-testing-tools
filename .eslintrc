// https://eslint.org/docs/user-guide/configuring/
{
  "parserOptions": {
    // Default is ECMAScript 5
    "ecmaVersion": 2021,
    // Files are ECMAScript modules
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    // Disallows strict mode directives as all files will be compiled with Babel that will add the 'use strict' anyway.
    "strict": ["error", "never"],
    "valid-typeof": "error",
    // "valid-typeof": "warn"
    "no-unsafe-negation": "error",
    "no-unused-vars": "error",
    "no-unexpected-multiline": "error",
    "no-undef": "error"
  },
  "env": {
    "browser": true
  }
}